{
	"name": "@monooso/avatar",
	"version": "1.0.0",
	"description": "Generates a random SVG avatar for any given identifier. Always generates the same avatar for the same identifier.",
	"keywords": [
		"avatar",
		"svg"
	],
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"files": [
		"./dist/**"
	],
	"engines": {
		"node": ">=20.0.0"
	},
	"author": {
		"name": "Stephen Lewis",
		"email": "code@stephenlewis.me",
		"url": "https://www.stephenlewis.me"
	},
	"homepage": "https://github.com/monooso/avatar#readme",
	"bugs": "https://github.com/monooso/avatar/issues",
	"funding": "https://github.com/sponsors/monooso",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/monooso/avatar.git"
	},
	"scripts": {
		"build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm",
		"dev": "run-p dev:*",
		"dev:esbuild": "pnpm run build --watch",
		"dev:node": "node --watch dist/index.js",
		"dev:tsc": "tsc --watch --preserveWatchOutput",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@types/node": "^20.10.4",
		"@typescript-eslint/eslint-plugin": "^6.13.2",
		"@typescript-eslint/parser": "^6.13.2",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"prettier": "^3.1.0",
		"typescript": "^5"
	},
	"dependencies": {
		"esbuild": "^0.19.8",
		"npm-run-all": "^4.1.5"
	}
}
