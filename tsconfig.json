{
	"compilerOptions": {
		/* Base options */
		"allowJs": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "es2022",
		/* Strictness */
		"noUncheckedIndexedAccess": true,
		"strict": true,
		/* We're transpiling with esbuild, and using TypeScript only for type checking */
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmit": true,
		/* We not running in the DOM */
		"lib": ["es2022"]
	}
}
